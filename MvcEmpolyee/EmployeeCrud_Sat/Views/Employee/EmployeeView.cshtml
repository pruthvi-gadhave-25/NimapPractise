@using EmployeeCrud_Sat.Data
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Employee List";
}

@model List<GetEmployeeDto>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Country</th>
            <th>State</th>
            <th>City</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeCode</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.CountryName</td>
                    <td>@item.StateName</td>
                    <td>@item.CityName</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.MobileNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeCode">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EmployeeCode">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EmployeeCode">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No data found.</td>
            </tr>
        }
    </tbody>
</table>


