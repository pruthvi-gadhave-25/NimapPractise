@{
    ViewData["Title"] = "Edit Student";
}


@model Student
<h1>Edit Student</h1>


@if(Model is null){
    <p>No Studetns Found</p>
}
else{

    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3 col-6">
                <label class="form-lable">Name</label>
                <input type="text" class="form-control" asp-for="Name"></input>
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="mt-3 col-6">
                <label class="form-lable">Phone</label>
                <input type="text" class="form-control" asp-for="Phone"></input>
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>
            <div class="mt-3 col-6">
                <label class="form-lable">Email</label>
                <input type="text" class="form-control" asp-for="Email"></input>
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="mt-3">
                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"></input>
                <label class="form-check-label" for="Subscribed">Subscribed</label>
                <div class="text-danger">
                    @Html.ValidationMessageFor(m => m.Subscribed)
                </div>
            </div>
            <div class="mt-3 ">
                <button type="submit" class="btn btn-primary">Update </button>
                <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Student" asp-route-id="Model.Id" > Delete </button>
            </div>
        </form>
    </div>
}