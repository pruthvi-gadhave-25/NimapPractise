@{
    ViewData["TItle"] = "Student List";
}

@model List<Student>

<div class="d-flex justify-content-between mb-3">
    <h5>Students</h5>
    @* <button type="button" class="btn btn-primary " asp-controller="Student" asp-action="Add">Add Student</button> *@
    <a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Student" asp-action="Add">Add Student</a>

</div>
<table class="table table-striped table-responsive">
   <thead>
        <tr>                          
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subsribed</th>
            <th>Action</th>      
        </tr>
   </thead>
   <tbody>
       @foreach(var student in Model){
            
           <tr class="fs-6">
               <td>@student.Name</td>              
               <td>@student.Email</td>
                <td>@student.Phone</td>
               <td>@student.Subscribed</td>
               <td > 
                   <a  class="btn btn-success  btn-sm" asp-controller="Student" asp-action="Edit"  asp-route-id="@student.Id">Edit</a>
                   
               </td>
                <td>
                   
                </td>
           </tr>
           
       }
   </tbody>

</table>
